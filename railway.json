{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd whatsapp_bot/frontend && npm install"
  },
  "deploy": {
    "startCommand": "cd whatsapp_bot/frontend && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}